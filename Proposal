<script>
  // Simple navigation function
  function next(id) {
    document.querySelectorAll('.card').forEach(c => c.classList.remove('active'));
    document.getElementById(id).classList.add('active');
  }

  // Dynamic WhatsApp Link
  const phone = ""; // OPTIONAL: Enter her number like "919999999999" to auto-open chat
  const text = "I've reviewed the case file... and I accept the diagnosis! üíñ See you on Valentine's Day!";
  const link = `https://wa.me/${phone}?text=${encodeURIComponent(text)}`;
  document.getElementById('shareWhats').href = link;
</script>
