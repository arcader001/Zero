<script>
  // small helper
  const show = (id)=>{ document.querySelectorAll('.card').forEach(c=>c.classList.add('screen-fade')); document.getElementById(id).classList.remove('screen-fade'); document.getElementById(id).classList.add('active'); window.scrollTo({top:0,behavior:'smooth'}); }
  // initialize: only screen-1 visible
  document.querySelectorAll('.card').forEach((c,i)=>{ if (i!==0){c.classList.add('screen-fade')} else {c.classList.add('active')} });

  document.getElementById('openCase').addEventListener('click',()=> show('screen-2'));
  document.getElementById('reviewSymptoms').addEventListener('click',()=> show('screen-3'));
  document.getElementById('toAssessment').addEventListener('click',()=> show('screen-4'));
  document.getElementById('finalRecommendation').addEventListener('click',()=> show('screen-5'));

  document.getElementById('accept').addEventListener('click',()=> show('screen-7'));
  document.getElementById('reject').addEventListener('click',()=> show('screen-6'));
  document.getElementById('forceAccept').addEventListener('click',()=> show('screen-7'));

  // Share links (customize message)
  const title = encodeURIComponent("Will you be my Valentine?");
  const body = encodeURIComponent("They accepted the case! üíñ\nProceed with Valentine's Day together ‚Äî laugh a lot and eat something good together.\n\n(From: Your secret admirer)");
  const waLink = "https://api.whatsapp.com/send?text=" + encodeURIComponent("I have a special message for you:\n\nWill you be my Valentine? ‚ù§Ô∏è\n\nOpen this link (if you can't open it here, I'll send it directly):\n\n");
  // when hosted, we will append the page URL to the message
  const mailLink = "mailto:?subject=" + title + "&body=" + body;

  const setLinks = ()=> {
    const pageUrl = encodeURIComponent(location.href);
    document.getElementById('shareWhats').href = waLink + pageUrl;
    document.getElementById('shareMail').href = mailLink + "%0A%0A" + pageUrl;
  };
  // set links initially and on load
  setLinks();
  window.addEventListener('hashchange', setLinks);
  window.addEventListener('load', setLinks);
</script>
